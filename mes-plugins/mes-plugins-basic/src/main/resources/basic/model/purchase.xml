<model name="purchase" activable="true" auditable="true"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://schema.qcadoo.org/model"
	xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
	<fields>
		<string name="number" required="true" unique="true">
			<validatesLength max="255" />
		</string>
		<belongsTo name="product" model="product" />

		<integer name="quantity" default="1" />

		<decimal name="price" default="1" />
		
		<datetime name="date" />
		
		<belongsTo name="currency" model="currency" />
		
		<string name="unit" persistent="false" />
		
	</fields>

	<hooks>
		<validatesWith class="com.qcadoo.mes.basic.hooks.PurchaseHooks"
			method="checkIfPriceIsCorrect" />
		<validatesWith class="com.qcadoo.mes.basic.hooks.PurchaseHooks"
			method="checkIfQuantityIsCorrect" />
		<validatesWith class="com.qcadoo.mes.basic.hooks.PurchaseHooks"
			method="checkIfNoPurchaseWithSameProductAndPriceExist" />
		<onCreate class="com.qcadoo.mes.basic.ProductService" method="fillUnit" />
		<onView class="com.qcadoo.mes.basic.ProductService" method="fillUnit" />
		<onUpdate class="com.qcadoo.mes.basic.hooks.PurchaseHooks" method="updateUnitIfProductChanged" />

	</hooks>

</model>